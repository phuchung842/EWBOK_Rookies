@using SharedVm
@using Common
@{
    var type = ViewData[Constants.TYPE_BANNER].ToString();
    int flag = 0;
    var brand = new BrandVm();
    var productcategory = new ProductCategoryVm();
    var material = new MaterialVm();
}
@if (type == Constants.TYPE_BANNER_BRAND.ToString())
{
    brand = ViewData[Constants.DATA_BANNER] as BrandVm;
    flag = 0;
}
else if (type == Constants.TYPE_BANNER_MATERIAL.ToString())
{
    material = ViewData[Constants.DATA_BANNER] as MaterialVm;
    flag = 1;
}
else
{
    productcategory = ViewData[Constants.DATA_BANNER] as ProductCategoryVm;
    flag = 2;
}

<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/customer/img/fashion/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                @if (flag == 0)
                {
                    <h2>@brand.Name</h2>
                }
                else if (flag == 1)
                {
                    <h2>@material.Name</h2>
                }
                else
                {
                    <h2>@productcategory.Name</h2>
                }

                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="#">Product</a></li>
                    @if (flag == 0)
                    {
                        <li class="active">@brand.Name</li>
                    }
                    else if (flag == 1)
                    {
                        <li class="active">@material.Name</li>
                    }
                    else
                    {
                        <li class="active">@productcategory.Name</li>
                    }

                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->